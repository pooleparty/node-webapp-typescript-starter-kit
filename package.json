{
  "name": "node-webapp-typescript-starter-kit",
  "version": "1.0.0",
  "description": "An opinionated starter kit for node web apps using Typescript",
  "main": "src/index.js",
  "scripts": {
    "dev": "npm-run-all -l -n --parallel dev:*",
    "dev:server": "nodemon --watch build --exec \"node build/bundle.js\"",
    "dev:watch-server": "npm run build-server -- --watch",
    "predev:watch-client": "npm run clean",
    "dev:watch-client": "webpack --config webpack.client.js --watch",
    "build-server": "webpack --config webpack.server.js",
    "prod:build-server": "npm run build-server -- -p",
    "preprod:build-client": "npm run clean",
    "prod:build-client": "webpack --config webpack.client.js -p --env=dist",
    "build": "run-s prod:*",
    "start": "node build/bundle.js",
    "lint": "tslint 'src/**/*.ts?(x)' --format stylish -p tsconfig.json",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "clean": "rimraf public/bundles; rimraf views",
    "validate": "npm-run-all --parallel test:coverage lint",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "prepush": "npm run validate",
    "precommit": "lint-staged",
    "docker:build": "npm run docker:clean && docker build -t portfolio --no-cache .",
    "docker:run": "docker run -d -p 3000:3000 --name portfolio-container portfolio",
    "docker:stop": "docker stop portfolio-container || true",
    "docker:clean": "npm run docker:stop && (docker rmi $(docker images -f \"dangling=true\" -q) || true) && (docker rm portfolio-container || true)"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pooleparty/node-webapp-typescript-starter-kit.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/boom": "^7.2.0",
    "@types/compression": "0.0.36",
    "@types/enzyme": "^3.1.14",
    "@types/express": "^4.16.0",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.116",
    "@types/lodash-es": "^4.17.1",
    "@types/prop-types": "^15.5.5",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "@types/react-helmet": "^5.0.7",
    "@types/react-redux": "^6.0.9",
    "@types/react-router-config": "^1.0.9",
    "@types/react-router-dom": "^4.3.1",
    "@types/serialize-javascript": "^1.3.2",
    "@types/tinycolor2": "^1.4.1",
    "@types/winston": "^2.4.4",
    "awesome-typescript-loader": "^3.5.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "jest": "^22.4.4",
    "jest-styled-components": "^4.10.0",
    "lint-staged": "^6.1.1",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "svg-inline-loader": "^0.8.0",
    "ts-jest": "^22.4.6",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-loader": "^3.6.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.3",
    "webpack": "^3.12.0",
    "webpack-merge": "^4.1.4",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "await-to-js": "^2.0.1",
    "axios": "^0.16.2",
    "boom": "^7.2.0",
    "compression": "^1.7.3",
    "ejs": "^2.6.1",
    "express": "^4.16.3",
    "image-webpack-loader": "^3.6.0",
    "lodash-es": "^4.17.11",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-helmet": "^5.2.0",
    "react-redux": "^5.0.7",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.3.1",
    "redux": "^3.7.2",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^1.5.0",
    "styled-components": "^3.4.9",
    "winston": "^2.4.4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint -p tsconfig.json --fix",
      "prettier --write",
      "git add"
    ]
  }
}
